# PostgreSQL Configuration (for local development)
# For Docker, these are set in the root .env file
POSTGRES_USER=filerunner
POSTGRES_PASSWORD=filerunner_password
POSTGRES_DB=filerunner

# Database Connection URL
# For local development: use localhost
# For Docker: this is constructed in docker-compose.yml
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Server Configuration
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Feature Flags
ALLOW_SIGNUP=true

# Admin User (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_admin_password_immediately

# Logging
RUST_LOG=info,filerunner_backend=debug
